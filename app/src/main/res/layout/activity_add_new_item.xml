<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewItemActivity">

    <TextView
        android:id="@+id/first_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of new product:"
        android:textSize="25sp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/new_item_name"/>

    <EditText
        android:id="@+id/new_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_text"/>

    <TextView
        android:id="@+id/second_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of units:"
        android:textSize="25sp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/new_item_name"
        app:layout_constraintBottom_toTopOf="@+id/new_item_number_of_units"/>

    <EditText
        android:id="@+id/new_item_number_of_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=""
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/second_text"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/third_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receipt date:"
        android:textSize="25sp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/new_item_number_of_units"
        app:layout_constraintBottom_toTopOf="@+id/new_item_date"/>

    <DatePicker
        android:id="@+id/new_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        app:layout_constraintTop_toBottomOf="@id/third_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fourth_text"/>

    <TextView
        android:id="@+id/fourth_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="25sp"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/new_item_date"
        app:layout_constraintBottom_toTopOf="@+id/new_item_price"/>

    <EditText
        android:id="@+id/new_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="25sp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/fourth_text"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="ADD"
        android:textColor="@color/cardview_light_background"
        android:onClick="addNew"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>